<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Change_Name"
    android:background="@color/ligth_beige">

    <Button
        android:id="@+id/change_apperance_page_confirm_button"
        android:layout_width="284dp"
        android:layout_height="68dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/blue_accent"
        android:text="@string/change_name_page_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/change_name_page_hint"
        android:layout_width="342dp"
        android:layout_height="43dp"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:hint="@string/change_name_page_hint"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_apperance_page_title" />

    <TextView
        android:id="@+id/change_apperance_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="@string/change_name_page_title"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>