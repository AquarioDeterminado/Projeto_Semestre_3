<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/plant_selector_office_preview_image_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/plant_selector_image_description"
        app:layout_constraintEnd_toEndOf="@+id/plant_selector_back_button"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plant_selector_settings_button"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageView
        android:id="@+id/plant_selector_office_preview_image_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/plant_selector_image_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/plant_selector_back_button"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:layout_editor_absoluteY="82dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/plant_selector_office_preview_button_company_4"
        android:layout_width="100dp"
        android:layout_height="132dp"
        android:background="#00FFFFFF"
        android:textColor="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/plant_selector_coworking_name_4"
        app:layout_constraintEnd_toEndOf="@+id/plant_selector_office_preview_image_4"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/plant_selector_office_preview_image_4"
        app:layout_constraintTop_toTopOf="@+id/plant_selector_office_preview_image_4"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/plan_row_item"
        android:layout_width="100dp"
        android:layout_height="132dp"
        android:background="#00FFFFFF"
        android:text="@string/plant_selector_office_preview_button_coworking_1"
        android:textColor="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/plant_selector_coworking_name_1"
        app:layout_constraintEnd_toEndOf="@+id/plant_selector_office_preview_image_1"
        app:layout_constraintStart_toStartOf="@+id/plant_selector_office_preview_image_1"
        app:layout_constraintTop_toTopOf="@+id/plant_selector_office_preview_image_1"
        app:layout_constraintVertical_bias="0.12" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/plan_selector_company_list"
        android:layout_width="86dp"
        android:layout_height="701dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="212dp" />

</androidx.constraintlayout.widget.ConstraintLayout>